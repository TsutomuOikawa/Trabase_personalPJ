{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "node",
        "baseUrl": "./",
        "strict": true,         // Enable strict type-checking options
        "skipLibCheck": true,   // Skip type checking of declaration files
        "noImplicitAny": true  // Bypass raising errors on `any` type
    },
    "include": ["resources/ts/**/*"] // Frontend paths pattern
}
